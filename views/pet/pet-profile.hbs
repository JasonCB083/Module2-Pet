{{>menu}}

<h1>PROFILE</h1>
{{pets}}
<div class="pet-choosen-details">
  <p>Name: {{this.petName}}</p>
  <p>Kind: {{this.type}}</p>
  <p>Size: {{this.size}}</p>
  <img src="{{this.picture}}">

  <form action="pet-profile/request/{{_id}}" method="POST" >
    <button type="submit">Request Pet</button>
  </form>
</div>
